{% extends 'base.html.twig' %}

{% block body %}
    <h1>Students list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th width="70">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.name }}</td>
                <td>{{ student.surname }}</td>
                <td>{{ student.email }}</td>
                <td>
                    <a role="button" class="btn btn-primary btn-sm" href="{{ path('student_grades_edit', { 'id': student.id }) }}">Grades</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
